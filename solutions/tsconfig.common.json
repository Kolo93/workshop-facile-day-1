{
  "compilerOptions": {
    "downlevelIteration": true,
    "lib": ["ES2019"],
    "target": "ES2017",
    "module": "CommonJS",
    "strict": true,
    "strictNullChecks": true,
    "outDir": "lib",
    "noErrorTruncation": true,
    "noEmit": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": ".",
    "declaration": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "removeComments": false,
    "paths": {
      "@app/*": ["src/*"]
    },
    "plugins": [{ "transform": "typescript-transform-paths" }]
  }
}
